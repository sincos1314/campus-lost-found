[Unit]
Description=Lost Found Backend (home admin)
After=network.target

[Service]
Type=simple
User=admin
WorkingDirectory=/home/admin/campus-lost-found
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/admin/campus-lost-found/venv/bin/python backend/app.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
